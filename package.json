{
  "name": "nextjs-theme-toggle",
  "version": "1.0.0",
  "description": "A simple React-based theme toggle component for Next.js projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:styles",
    "copy:styles": "copyfiles -u 1 \"src/**/*.scss\" \"src/**/*.scss.d.ts\" dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "next.js",
    "theme",
    "toggle",
    "dark mode",
    "light mode",
    "dark theme",
    "light theme",
    "next-themes",
    "react",
    "switch"
  ],
  "author": "David Veszelovszki",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/vdavid/nextjs-theme-toggle.git"
  },
  "homepage": "https://github.com/vdavid/nextjs-theme-toggle",
  "bugs": {
    "url": "https://github.com/vdavid/nextjs-theme-toggle/issues"
  },
  "dependencies": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "18.0.28",
    "copyfiles": "^2.4.1",
    "next": "13.2.4",
    "react-dom": "^18.2.0",
    "typescript": "5.0.2"
  }
}
